generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model PageView {
  id        String     @id @default(uuid())
  userId    String     
  version   String
  url       String
  createdAt DateTime   @default(now())
  user      User @relation(fields: [userId], references: [id])
}

model UserEvent {
  id         String   @id @default(uuid())
  userId     String   
  eventName  String
  url        String
  createdAt  DateTime @default(now())
  user      User @relation(fields: [userId], references: [id])
}

model User {
  id        String     @id @default(uuid())
  pageViews PageView[]
  userEvents UserEvent[]
}
